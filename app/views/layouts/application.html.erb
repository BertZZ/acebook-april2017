<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <nav>
    <a href="/">
    <div id="page-logo">
    </div></a>
    <% if signed_in? %>
  <div class="dropdown">
  <li class="dropbtn"><i class="fa fa-chevron-circle-down" style="font-size:20px"></i></li>
  <div class="dropdown-content">
    <a href="/">Profile</a>
    <a href="/">Account</a>
    <%= link_to 'Sign out', sign_out_path, method: :delete %></a>
  </div>
</div>
<li><a href="/" class="right-link" >Home</a></li>
<li><span class="right-link"> Signed in as: <%= current_user.email %></span></li>

        <% else %>
      <li>  <%= link_to 'Sign in', sign_in_path, { :class=>"right-link" } %></li>
    <% end %>
    </div>
  </nav>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
