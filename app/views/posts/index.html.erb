<% @posts.order(created_at: :desc).each do |post| %>
  <div id="post">
    <!-- This displays the post itself-->
    <div id="post-body">
      <%= image_tag post.image_url.to_s %>
      <%= post_presenter(post) %>
    </div>

    <!-- This displays the footer, with name, timestamp and like button -->
    <div id="post-footer">
      <div id="col-left">
        <%= image_tag post.user.avatar.to_s, size: User::AVATAR_SIZES[:small] %> <%= post.user.name %> at <%= time_and_date(post) %>
      </div>
      <div id="col-right">
        <% if current_user %>
          <%= form_tag("/likes", method: "post") do %>
            <%= hidden_field_tag(:user_id, current_user.id) %>
            <%= hidden_field_tag(:post_id, post.id) %>
            <% already_liked = post.likes.any?{ |like| like.user_id == current_user.id } %>
            <%= submit_tag "Like (#{post.likes.count})", :disabled => already_liked %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Another div for comment form and comments  -->
    <div id='comment-footer'>
      <div class='comment-list'>
        <% post.comments.each do |comment| %>
          <p> <span class='comment-user-name'> <%= image_tag comment.user.avatar.to_s, size: User::AVATAR_SIZES[:thumb] %> <%= comment.user.name %>: </span><%= comment.body %></p>
        <% end %>
      </div>

      <div class='comment-form'>
        <div class='comment-form-text-box'>
          <span class='comment-form-header'>Add a comment:</span>
          <%= form_for([post, post.comments.build]) do |comment| %>
            <%= comment.hidden_field(:user_id, value: current_user.id) %>
            <%= comment.text_field :body, class: 'comment-input-box' %>
        </div>
            <%= comment.submit class: 'submit-comment' %>
          <% end %>
      </div>
    </div>
  </div>

<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
