<% @posts.order(created_at: :desc).each do |post| %>
  <p><%= simple_format(post.message).gsub(URI.regexp, '<a href="\0">\0</a>').html_safe  %> Posted on <%= post.created_at.strftime("%d/%m/%Y")%> at <%= post.created_at.strftime("%H:%M")%></p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
