<% @posts.order(created_at: :desc).each do |post| %>

  <p><%= simple_format(post.message) %> Posted on <%= post.created_at.strftime("%d/%m/%Y")%> at
    <%= post.created_at.strftime("%H:%M")%>

    <%= form_tag("/likes", method: "post") do %>
    <%= hidden_field_tag(:user_id, 1) %>
    <%= hidden_field_tag(:post_id, post.id) %>
    <%= submit_tag "Like (#{post.likes.count})" %>
    <% end %>

  </p>

<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
